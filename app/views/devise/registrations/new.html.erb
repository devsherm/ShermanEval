<div class="flex items-center">
  <%= render_card(title: "Sign Up", subtitle: "Enter your information to create an account", body: nil, footer: nil ) do %>
    <%= render_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :full_name, class: "block text-left w-full capitalize" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
      </div>
      <div class="field">
        <%= f.label :email, class: "block text-left w-full" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>
      <div class="field">
        <%= f.label :password, class: "block text-left w-full" %>
        <%= f.password_field :password, autocomplete: "new-password", required: true %>

        <% if @minimum_password_length %>
        <em class="text-xs text-muted-foreground">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "block text-left w-full capitalize" %>
        <%= f.password_field :password_confirmation, required: true %>
      </div>
      <%= f.submit "Create an account", class: "w-full" %>
      <%= render "devise/shared/links" %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>
  <% end %>
</div>
