<div class="container mx-auto max-w-md mt-10">
  <h2 class="text-2xl font-bold text-center mb-4">Sign Up</h2>

  <%= form_with(model: resource, url: registration_path(resource_name), local: true, data: { controller: "registration" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email, class: "block w-full p-2 border border-gray-300 rounded-md outline-none", data: { action: "input->registration#validate" } %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium" %>
      <%= f.password_field :password, class: "block w-full p-2 border border-gray-300 rounded-md outline-none", data: { action: "input->registration#validate" } %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium" %>
      <%= f.password_field :password_confirmation, class: "block w-full p-2 border border-gray-300 rounded-md outline-none", data: { action: "input->registration#validate" } %>
    </div>

    <div class="mb-4">
      <%= f.label :name, class: "block text-sm font-medium" %>
      <%= f.text_field :name, class: "block w-full p-2 border border-gray-300 rounded-md outline-none", data: { action: "input->registration#validate" } %>
    </div>

    <div class="flex justify-between">
      <%= f.submit "Sign Up", class: "px-4 py-2 bg-blue-500 text-white rounded-lg font-medium cursor-pointer" %>
      <a href="<%= new_session_path(resource_name) %>" class="px-4 py-2 text-blue-600 underline">Sign In</a>
    </div>
  <% end %>
</div>
