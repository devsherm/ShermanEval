<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="d-flex flex-column align-items-center" style="width: 100%; max-width: 70rem;">
    <div class="card bg-dark mb-3 w-50" style="max-height: 70rem;">
      <div class="card-body d-flex justify-content-center">
        <%= image_tag("Sherman Buildings Logo.png", alt: "Sherman Buildings Logo", style: "max-width: 50%; height: auto;") %>
      </div>
    </div>

    <div class="card text-white bg-dark mb-3 w-50" style="max-height: 70rem;">
      <div class="card-header text-center" style="font-size: 1.5rem;"><h2>Log in</h2></div>
      <div class="card-body p-3" style="font-size: 1.2rem;">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal w-100' }) do |f| %>
          <div class="form-group" style="margin-bottom: 1rem;">
            <%= f.label :email, class: 'control-label', style: 'margin-bottom: 0.5rem;' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', style: 'font-size: 1.1rem; padding: 0.75rem;' %>
          </div>

          <div class="form-group" style="margin-bottom: 1rem;">
            <%= f.label :password, class: 'control-label', style: 'margin-bottom: 0.5rem;' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', style: 'font-size: 1.1rem; padding: 0.75rem;' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group form-check" style="margin-bottom: 1rem;">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label', style: 'margin-left: 0.5rem; font-size: 1.1rem;' %>
            </div>
          <% end %>

          <div class="d-flex justify-content-center" style="margin-bottom: 1rem;">
          <%= f.submit "Log in", class: 'btn btn-primary', style: 'font-size: 1.2rem; padding: 0.75rem 1.5rem; vertical-align: middle;' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary', style: 'font-size: 1.2rem; padding: 0.75rem 1.5rem; margin-left: 0.5rem; vertical-align: middle;' %>
        </div>
        
        <% end %>
      </div>
    </div>
  </div>
</div>



