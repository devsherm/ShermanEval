<div class="container mx-auto max-w-md mt-10">
  <h2 class="text-2xl font-bold text-center mb-4">Sign In</h2>

  <%= form_with(model: resource, url: session_path(resource_name), local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email, class: "block w-full p-2 border border-gray-300 rounded-md outline-none" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium" %>
      <%= f.password_field :password, class: "block w-full p-2 border border-gray-300 rounded-md outline-none" %>
    </div>

    <div class="flex justify-between">
      <%= f.submit "Sign In", class: "px-4 py-2 bg-blue-500 text-white rounded-lg font-medium cursor-pointer" %>
      <a href="<%= new_user_password_path(resource_name) %>" class="px-4 py-2 text-blue-600 underline">Forgot Password?</a>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <p>Don't have an account?</p>
    <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-600 underline" %>
  </div>
</div>
