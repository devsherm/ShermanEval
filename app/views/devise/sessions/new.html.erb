<div class="container">

  <h1 class="font-bold text-4xl">Log in</h1>

  <div class="container">
  <main>
  <div class="row">

  <div class="col-md-12">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="my-3 col-md-5">
      <%= f.label :email, class: "form-label block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control block rounded-md border border-gray-200 outline-none" %>
    </div>

    <div class="my-3 col-md-5">
      <%= f.label :password, class: "form-label block" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control block rounded-md border border-gray-200 outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="flex">
      <%= f.submit "Log in", class: "col-md-2 btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
  </div>
  </main>
  </div>
</div>
