<div class="container mx-auto max-w-md mt-10 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-4">Resend Unlock Instructions</h2>

  <%= form_with(model: resource, as: resource_name, url: unlock_path(resource_name), method: :post, local: true) do |f| %>
    <% if resource.errors.any? %>
      <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h3><%= pluralize(resource.errors.count, "error") %> prohibited resending unlock instructions:</h3>

        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email, class: "block w-full p-2 border border-gray-300 rounded-md outline-none", autocomplete: "email" %>
  </div>

    <div class="form-actions flex justify-between">
      <%= f.submit "Resend Unlock Instructions", class: "px-4 py-2 bg-blue-500 text-white rounded-lg font-medium cursor-pointer" %>
      <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>
