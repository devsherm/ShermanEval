
<section class="flex">
    <div class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full">
        <!-- Breadcrumb -->
        <nav class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                <li class="inline-flex items-center">
                <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                    <svg class="mr-2 w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    Home
                </a>
                </li>
                <li aria-current="page">
                <div class="flex items-center">
                    <svg class="mr-2 rtl:rotate-180  w-3 h-3 mx-1 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400"><%= @job_application.job_title %></span>
                </div>
                </li>
            </ol>
        </nav>

        

        <div class="p-4 relative bg-white shadow-md sm:rounded-lg mt-4">
        <div class="flex justify-between mt-4 mb-4">
            <div></div>
            <% if current_user.admin %>
                <% if @job_application.status_active? %>
                    <%= link_to job_application_path(@job_application), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "self-center ml-2 text-gray-0 inline-flex items-center bg-red-200 hover:bg-red-400 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" do %>
                        <svg class="mr-1 -ml-1 w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
                        Delete
                    <% end %>
                <% else %>
                    <%= link_to job_application_path(@job_application), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "self-center ml-2 text-gray-0 inline-flex items-center bg-gray-100 hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center" do %>
                        <svg class="mr-1 -ml-1 w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
                        Activate
                    <% end %>
                <% end %>
            <% end %>
        </div>
            <%= render partial: "job_applications/form",  locals: {application: @job_application, label: "Update", path: job_application_path(@job_application)} %>
        </div>
        
    </div>

</section>
<main class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full mb-auto h-10 mt-4"></main>

<script>
    tinymce.remove();

    tinymce.init({
      selector: 'textarea',
      plugins: 'anchor autolink image link lists media searchreplace table',
      toolbar: 'undo redo | bold italic underline strikethrough | link image media table mergetags | align lineheight',
      license_key: 'gpl',
      promotion: false
    });
</script>


