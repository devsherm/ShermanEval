<!DOCTYPE html>
<html>
  <head>
    <title>ShermanEval</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div>
      <%= render 'layouts/header', user: current_user %>
      <main class="py-4 min-h-screen w-screen flex justify-center px-4">
        <%= yield %>
      </main>

      <% if notice.present? %>
        <div class="absolute top-20 right-4 max-w-fit m-auto bg-background rounded-lg shadow-md"
          data-controller="alert"
          data-timeout="5000"
          data-alert-target="alert">
          <%= render_alert(variant: :success, title: "Success", description: notice) %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="absolute top-20 right-4 max-w-fit m-auto bg-background rounded-lg shadow-md"
          data-controller="alert"
          data-timeout="5000"
          data-alert-target="alert">
          <%= render_alert(variant: :alert, title: "Error", description: alert) %>
        </div>
      <% end %>
    </div>
  </body>
</html>

