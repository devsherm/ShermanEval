<div class="mx-auto w-full md:w-2/3 mt-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-4">User Profile</h1>
  
  <p>Email: <%= @user.email %></p>
  <p>Name: <%= @user.name %></p>

  <h3 class="font-bold mt-4">Your Applicants</h3>
  <table class="min-w-full">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Creation Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @applicants.each do |applicant| %>
        <tr>
          <td><%= applicant.name %></td>
          <td><%= applicant.category %></td>
          <td><%= applicant.created_at %></td>
          <td><a href="<%= v1_applicant_path(applicant) %>">View</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Edit Profile", edit_user_path(@user), class: "mt-4 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  
  <%= button_to "Delete Profile", user_path(@user), method: :delete, class: "mt-4 ml-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>

  <%= link_to "Back to Users", users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
