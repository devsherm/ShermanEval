<div id="<%= dom_id user_application %>">
  <% if current_user.admin? %>
    <div class="flex items-center">
      <%= turbo_frame_tag "user_application_status_#{user_application.id}" do %>
        <%= render partial: "score", locals: {user_application: user_application} %>
      <% end %>

      <div class="flex flex-row gap-3 ml-5">
        <%= button_to 'Pass', update_status_user_application_path(user_application, score: :pass), method: :patch, data: { turbo_frame: "user_application_status#{user_application.id}" }, class: "rounded-lg py-3 px-5 bg-red-100 inline-block font-medium" %>
        <%= button_to 'Follow Up', update_status_user_application_path(user_application, score: :follow_up), method: :patch, data: { turbo_frame: "user_application_status#{user_application.id}" }, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= button_to 'Move Forward', update_status_user_application_path(user_application, score: :move_forward), method: :patch, data: { turbo_frame: "user_application_status#{user_application.id}" }, class: "rounded-lg py-3 px-5 bg-green-100 inline-block font-medium" %>
      </div>
    </div>
  <% end %>

  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= user_application.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= user_application.last_name %>
  </p>

  <% if current_user.admin? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">User:</strong>
      <%= user_application.user.email %>
    </p>
  <% end %>

  <p class="my-5">
    <strong class="block font-medium mb-1">Skills:</strong>
    <%= user_application.skills&.join(", ") %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">About me:</strong>
    <%= user_application.about_me %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= user_application.gender %>
  </p>

  <% if action_name != "show" && current_user.admin? %>
    <%= link_to "Show this user application", user_application, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this user application", edit_user_application_path(user_application), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
