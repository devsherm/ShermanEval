<div id="<%= dom_id applicant %>">
  
  <% if current_user.admin? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">User:</strong>
      <%= applicant.user.name %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">Overall Score:</strong>
      <%= applicant.score %>
    </p>
  <% end %>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= applicant.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Experience:</strong>
    <%= applicant.experience %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Availability:</strong>
    <%= applicant.availability.join(', ') %>
  </p>

  <% if action_name != "show" %>
    <%# <%= link_to "Show this applicant", applicant, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this applicant", edit_applicant_path(applicant), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
