<div id="<%= dom_id applicant %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= applicant.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">My level:</strong>
    <%= applicant.my_level %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Scratch before:</strong>
    <%= applicant.scratch_before %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fav hobby:</strong>
    <%= applicant.fav_hobby %>
  </p>

  <% if action_name != "show" %>
    <%# link_to "Show this applicant", applicant, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this applicant", edit_applicant_path(applicant), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
