<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Mailer Template</h1>
  <%= form_with(url: applicant_send_mail_path(@applicant), method: :post) do |form| %>
    <div class="mt-8">
      <div>
        <%= label_tag "subject", "Subject", class: "block text-sm font-medium text-gray-700" %>
        <%= text_field_tag "subject", nil, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="mt-4">
        <%= label_tag "body", "Body", class: "block text-sm font-medium text-gray-700" %>
        <%= text_area_tag "body", nil, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="mt-8">
        <%= submit_tag "Send", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
  <%= link_to "Back to applicants", applicants_path, class: "mt-4 ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
