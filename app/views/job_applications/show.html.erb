<section class="flex">
    <div class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full">
        <nav class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                <li class="inline-flex items-center">
                <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" data-turbo= "false">
                    <svg class="mr-2 w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    Home
                </a>
                </li>
                <li aria-current="page">
                <div class="flex items-center">
                    <svg class="mr-2 rtl:rotate-180  w-3 h-3 mx-1 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2"><%= @job_application.job_title %></span>
                </div>
                </li>
            </ol>
        </nav>

        

        <section class="bg-white">
            <div class="py-8 lg:py-8 mx-auto max-w-screen-md">
                <h2 class="mb-2 text-4xl tracking-tight font-extrabold text-center text-gray-900"><%= @job_application.job_title %></h2>
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    <li class="ms-1 text-sm font-medium text-gray-500 md:ms-2">
                        Posted <%= time_ago_in_words(@job_application.created_at) %> ago
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="w-[20px] h-[20px] text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M12 6h.01M12 12h.01M12 18h.01"/>
                            </svg>
                            <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2"><%= @job_application.job_department.humanize %></span>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="w-[20px] h-[20px] text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M12 6h.01M12 12h.01M12 18h.01"/>
                            </svg>
                            <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2"><%= @job_application.job_position.humanize %></span>
                        </div>
                    </li>
                </ol>
                <div class="mb-4 w-full flex flex-col space-y-3">
                    <% if @job_application.job_submissions.length == 0 %>
                        <%= link_to apply_job_submission_path(job_application_id: @job_application.id), class: "mt-4 flex items-center justify-center px-4 py-2 text-sm font-medium text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300", data: {turbo: false} do %>
                            <svg class="h-3.5 w-3.5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                <path clip-rule="evenodd" fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
                            </svg>
                            Apply Now
                        <% end %>
                    <% else%>
                        <button type="button" class="flex items-center justify-center mt-4 text-gray-500 bg-blue-100 cursor-not-allowed font-medium rounded-lg text-sm px-5 py-2.5 text-center" disabled>
                            You have already applied for this job <%= time_ago_in_words(@job_application.job_submissions.last.created_at) %> ago
                        </button>
                        <%= link_to job_submission_path(id: @job_application.job_submissions.last.id ), class: "mt-4 flex items-center justify-center px-4 py-2 text-sm font-medium text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300", data: {turbo: false} do %>
                            <svg class="mr-2 w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 21 21">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m6.072 10.072 2 2 6-4m3.586 4.314.9-.9a2 2 0 0 0 0-2.828l-.9-.9a2 2 0 0 1-.586-1.414V5.072a2 2 0 0 0-2-2H13.8a2 2 0 0 1-1.414-.586l-.9-.9a2 2 0 0 0-2.828 0l-.9.9a2 2 0 0 1-1.414.586H5.072a2 2 0 0 0-2 2v1.272a2 2 0 0 1-.586 1.414l-.9.9a2 2 0 0 0 0 2.828l.9.9a2 2 0 0 1 .586 1.414v1.272a2 2 0 0 0 2 2h1.272a2 2 0 0 1 1.414.586l.9.9a2 2 0 0 0 2.828 0l.9-.9a2 2 0 0 1 1.414-.586h1.272a2 2 0 0 0 2-2V13.8a2 2 0 0 1 .586-1.414Z"></path>
                            </svg>
                            View Your Application
                        <% end %>
                    <% end %>
                </div>
                <div id="tinymc" class="mb-8 lg:mb-16 font-light text-center text-gray-500 sm:text-xl"><%= @job_application.job_description.html_safe %></div>
            </div>
        </section>
    </div>
</section>

<main class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full mb-auto h-10 mt-4"></main>


<script>
    tinymce.remove();
    tinymce.init({
        selector: '#tinymc',
        readonly: true, // Set the editor to read-only mode
        toolbar: false, // Disable the toolbar
        menubar: false, // Disable the menu bar
        statusbar: false
    });
</script>