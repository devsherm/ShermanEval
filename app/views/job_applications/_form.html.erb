<%= form_with model: defined?(application) ? application : JobApplication.new, url: path do |form| %>
    <div class="grid gap-4 mb-4 sm:grid-cols-2">
        <div class="sm:col-span-2">
            <%= form.label :job_title, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= form.text_field :job_title, class: "block bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5", required: true %>
        </div>

        <div>
            <%= form.label :job_position, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= form.select :job_position, JobApplication.job_positions.keys.map { |position| [position.humanize, position] },{}, {class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5", required: true} %>
        </div>

        <div>
            <%= form.label :job_department, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= form.select :job_department, JobApplication.job_departments.keys.map { |department| [department.humanize, department] },{}, {class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5", required: true} %>
        </div>
        <div class="sm:col-span-2">
            <%= form.label :job_description, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= form.text_area :job_description, class: "tinymce block bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5", rows: 4 %>
        </div>
    </div>
    <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
        <svg class="mr-1 -ml-1 w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
        <%= label %>
    </button>
<% end %>
