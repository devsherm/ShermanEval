<%= render_card(title: nil, subtitle: nil, body: nil, footer: nil, class: "w-full" ) do %>
  <div class="w-full bg-background items-top">
    <h2 class="text-md py-4 font-bold">Junior Rails Developer Application</h2>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="email">Name</label>
      <p class="text-sm w-full"><%= @job_application.name %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="email">Email</label>
      <p class="text-sm w-full"><%= @job_application.email %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="summary">Summary</label>
      <p class="text-sm w-full whitespace-break-spaces"><%= @job_application.summary %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="experience">Experience</label>
      <p class="text-sm w-full"><%= @job_application.experience %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="git_competence">Git Competence</label>
      <p class="text-sm w-full"><%= @job_application.git_competence %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="rails_competence">Rails Competence</label>
      <p class="text-sm w-full"><%= @job_application.rails_competence %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="preferred_contact_method">Preferred Contact Method</label>
      <p class="text-sm w-full"><%= @job_application.preferred_contact %></p>
    </div>
    <div class="flex flex-row space-x-4 items-start mb-8">
      <label class="text-sm font-bold w-32" for="created_at">Date Applied</label>
      <p class="text-sm w-full"><%= @job_application.created_at %></p>
    </div>
  </div>
<% end %>
